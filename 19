			system("cls");

			int center = size / 2;
			for (int y = 0; y < size; ++y) {
				for (int x = 0; x < size; ++x) {
					if (x == center || y == center) {
						cout << " " << textura << " ";
					}
					else {
						cout << " . ";
					}
				}
				cout << endl;
			}
			cin.ignore();
			cin.get();
		}
		else if (menu == 8) {
			system("cls");
			cout << "-------------- параметры ромба --------------\n";
			cout << "[ ] Размер";
