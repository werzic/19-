					int spaces_before = height - y;
					int chars = 2 * y - 1;
					for (int x = 0; x < height * 2 - 1; x++) {
						if (x < spaces_before || x >= spaces_before + chars) {
							cout << ". ";
						}
						else {
							cout << textura << " ";
						}
					}
