			cout << "[ ] Текстура: ";
			cin >> textura;
			system("cls");
			for (int y = 0; y < size; y++) {
				for (int x = 0; x < size; x++) {
					if ((y + x) % 2 == 0) {
						cout << ". ";
					}
					else {
						cout << textura << " ";
					}
				}
				cout << endl;
			}
			cin.ignore();
