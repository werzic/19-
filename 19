		cout << "[5] Решетка\n";
		cout << "[6] Крестик\n";
		cout << "[7] Плюс\n";
		cout << "[8] Ромб\n";
		cout << ">> ";
		cin >> menu;

		if (menu == 1) {
			system("cls");
			cout << "-------------- параметры линии --------------\n\n";
			cout << "[1] Горизонтальная\n";
			cout << "[2] Вертикальная\n";
