			cin >> parametr;
			if (parametr == 1) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
				cout << "Длина: ";
				cin >> dlina_linii;
				cout << "Текстура линии: ";
				cin >> textura;

				system("cls");
				while (i < dlina_linii) {
					cout << textura << " ";
					i++;
				}
				break;

			}
			else if (parametr == 2) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ ЛИНИИ --------------\n\n";
				cout << "Длина: ";
				cin >> dlina_linii;
				cout << "Текстура линии: ";
				cin >> textura;

				system("cls");
				while (i < dlina_linii) {
					cout << textura << endl;
					i++;
				}
				break;

