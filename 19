			system("cls");
			cout << "-------------- ПАРАМЕТРЫ КВАДРАТА --------------\n\n";
			cout << "[1] Заполненый\n";
			cout << "[2] Пустой\n";
			cout << ">> ";
			cin >> parametr;
			if (parametr == 1) {
				system("cls");
				cout << "-------------- ПАРАМЕТРЫ КВАДРАТА --------------\n\n";
				cout << "[ ] Длина квадрата: ";
				cin >> dlina_kvadrata;
				cout << "[ ] Текстура квадрата: ";
				cin >> textura;
				system("cls");
				if (parametr == 1) {
					for (int y = 0; y < dlina_kvadrata; y++) {
						for (int x = 0; x < dlina_kvadrata; x++) {
							cout << textura;
							if (x < dlina_kvadrata - 1) {
								cout << " ";
