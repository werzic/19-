			cout << "[ ] Текстура: ";
			cin >> textura;
			system("cls");
			for (int y = 0; y < size; y++) {
				for (int x = 0; x < size; x++) {

					if (y == x || y + x == size - 1) {
						cout << textura << " ";
					}
					else {
						cout << ". ";
					}
				}
				cout << endl;
			}
