				system("cls");
				for (int y = 0; y < dlina_kvadrata; y++) {
					for (int x = 0; x < dlina_kvadrata; x++) {
						if (y == 0 || y == dlina_kvadrata - 1 || y == 0 || y == dlina_kvadrata - 1) {
							cout << textura << " ";
						}
						else {
							cout << "  ";
						}
					}
					cout << endl;
				}
				cin.ignore();
				cin.get();
